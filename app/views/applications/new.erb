<section id="new-application-section">

	<form class="form-container" action="/applications" method="POST">
		<div class="form-title"><h2>New Application Information</h2></div>
			<input type="hidden" name="application[user_id]" value="<%= current_user.id %>">
		<div class="form-title">Company</div>
			<input class="form-field" type="text" name="application[company]" /><br />
		<div class="form-title">Position Title</div>
			<input class="form-field" type="text" name="application[position_title]" /><br />
		<div class="form-title">Reference Number</div>
			<input class="form-field" type="text" name="application[reference_number]" /><br />
		<div class="form-title">Contact Name</div>
			<input class="form-field" type="text" name="application[contact_name]" /><br />
		<div class="form-title">Phone Number</div>
			<input class="form-field" type="text" name="application[phone]" /><br />
		<div class="form-title">Email</div>
			<input class="form-field" type="email" name="application[email]" /><br />
		<div class="form-title">Date Applied</div>
			<input class="form-field" type="date" name="application[date_applied]" /><br />
		<div class="submit-container">
			<input class="submit-button" type="submit" value="Submit" />
		</div>
	</form>
	
	<p class="error"> <% @error %> </p>
</section>