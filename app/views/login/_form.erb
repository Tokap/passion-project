<div class="form-title">Email:</div>
<input class="form-field" type="email" name="user[email]" value="<%= @user.email %>">
<br>
<div class="form-title">Password:</div>
<input class="form-field" type="password" name="user[password]">
<br>

<!-- validation errors -->
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |error| %>
   <p class="error"> <%= error %> <p>
  <% end %>
<% end %>

<!-- other errors -->
<% if @errors %>
  <% @errors.each do |error| %>
    <p class="error"> <%= error %> <p>
  <% end %>
<% end %>